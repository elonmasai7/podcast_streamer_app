<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PodcastApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.PodcastApp.Launch">
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="android:background">?attr/backgroundColor</item>
    </style>
</resources>